<Window x:Class="Grafici.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Grafici"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="MainWindow"
        Width="1500"
        Height="600"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
        mc:Ignorable="d">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>

    <ComboBox Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="3"
              ItemsSource="{Binding FileRegistrazioni, Mode=OneTime}"
              SelectedItem="{Binding FileSelezionato, Mode=TwoWay}" />

    <oxy:PlotView x:Name="Plot"
                  Grid.Row="1"
                  Grid.Column="0"
                  Grid.ColumnSpan="3"
                  Model="{Binding PlotModel, Mode=OneWay}" />

    <Grid Grid.Row="2" Grid.Column="0">
      <Grid.RowDefinitions>
        <RowDefinition />
        <RowDefinition />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>

      <Label Grid.Row="0"
             Grid.Column="0"
             Content="Massimo: " />
      <Label Grid.Row="0"
             Grid.Column="1"
             Content="{Binding Massimo.X, Mode=OneWay}" />
      <Label Grid.Row="0"
             Grid.Column="2"
             Content=", " />
      <Label Grid.Row="0"
             Grid.Column="3"
             Content="{Binding Massimo.Y, Mode=OneWay}" />

      <Label Grid.Row="1"
             Grid.Column="0"
             Content="Minimo: " />
      <Label Grid.Row="1"
             Grid.Column="1"
             Content="{Binding Minimo.X, Mode=OneWay}" />
      <Label Grid.Row="1"
             Grid.Column="2"
             Content=", " />
      <Label Grid.Row="1"
             Grid.Column="3"
             Content="{Binding Minimo.Y, Mode=OneWay}" />
    </Grid>

    <Grid Grid.Row="2" Grid.Column="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>

      <Label Grid.Column="0"
             VerticalAlignment="Center"
             Content="{Binding IntervalloVisualizzatoStr, Mode=OneWay}" />

      <Label Grid.Column="1"
             VerticalAlignment="Center"
             Content="{Binding DurataTotaleStr, Mode=OneWay}" />

      <Grid Grid.Column="2" VerticalAlignment="Center">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Slider Grid.Row="0"
                Width="200"
                IsSnapToTickEnabled="True"
                LargeChange="0.1"
                Maximum="1"
                Minimum="0.01"
                SmallChange="0.01"
                TickFrequency="0.01"
                Value="{Binding Intervallo, Mode=TwoWay}" />

        <Label Grid.Row="1"
               HorizontalContentAlignment="Center"
               Content="{Binding IntervalloStr, Mode=OneWay}" />
      </Grid>

      <Button Grid.Column="3"
              Margin="5"
              Padding="10,0,10,0"
              Click="Indietro_Click"
              Content="&lt;"
              FontSize="30"
              FontWeight="Bold" />

      <Button Grid.Column="4"
              Margin="5"
              Padding="10,0,10,0"
              Click="Avanti_Click"
              Content="&gt;"
              FontSize="30"
              FontWeight="Bold" />

      <Button Grid.Column="5"
              Margin="5"
              Padding="5"
              Click="Aggiorna_Click"
              Content="Aggiorna" />

      <Button Grid.Column="6"
              Margin="5"
              Padding="5"
              Click="Reset_Click"
              Content="Reset" />
    </Grid>
  </Grid>
</Window>
